<RibbonWindow x:Class="ImageToolApp.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              mc:Ignorable="d"
              Title="ImageTool" Height="500" Width="600" Loaded="RibbonWindow_Loaded">

    <RibbonWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </RibbonWindow.Resources>

    <DockPanel LastChildFill="True">
        <Ribbon DockPanel.Dock="Top" SelectedIndex="{Binding SelectedRibbonTabIndex, Mode=OneWayToSource}">
            <Ribbon.HelpPaneContent>
                <RibbonButton SmallImageSource="{StaticResource HelpImage}" />
            </Ribbon.HelpPaneContent>

            <!--<Ribbon.QuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>-->

            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu x:Name="RibbonAppMenu" SmallImageSource="{StaticResource MenuImage}">
                    <RibbonApplicationMenuItem Header="Bild laden..." ImageSource="{StaticResource ImgImage}"
                                               Command="{Binding LoadImageCommand}" />
                    <RibbonApplicationMenuItem Header="Einstellungen" ImageSource="{StaticResource PreferencesImage}"
                                               Command="{Binding PreferencesCommand}" />
                    <RibbonApplicationMenuItem Header="Beenden" ImageSource="{StaticResource CloseImage}"
                                               Command="{Binding CloseAppCommand}" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Encrypt" />

            <RibbonTab Header="Decrypt" />
        </Ribbon>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="150"/>
                <ColumnDefinition Width="5" MaxWidth="5" MinWidth="5"/>
                <ColumnDefinition Width="200" MinWidth="25"/>
            </Grid.ColumnDefinitions>
            
            <ContentControl Grid.Column="0" Content="{Binding CurrentElement}" />
            <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch" />
            <Image Grid.Column="2" Source="{Binding GlobalViewModel.ImagePath}" />
        </Grid>
        
    </DockPanel>
</RibbonWindow>